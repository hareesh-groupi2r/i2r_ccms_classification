# Environment Variables for Contract Correspondence Classification System
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-openai-org-id-here

# Anthropic API Configuration (for Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Cloud Configuration (for Document AI and Gemini)
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GEMINI_API_KEY=your-gemini-api-key-here

# Vector Database Configuration (if using Pinecone or Qdrant)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Database Configuration (if needed)
DATABASE_URL=postgresql://user:password@localhost/ccms_db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ccms.log

# File Upload Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=pdf,txt,docx

# Model Paths (for local models)
LEGALBERT_MODEL_PATH=./data/models/legalbert-finetuned
MIXTRAL_MODEL_PATH=./data/models/mixtral-8x7b

# Tesseract OCR Path (if not in system PATH)
TESSERACT_CMD=/usr/local/bin/tesseract

# API Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100 per hour

# Monitoring (optional)
ENABLE_MONITORING=False
PROMETHEUS_PORT=9090
GRAFANA_API_KEY=

# Development Settings
DEV_MODE=True
HOT_RELOAD=True
VERBOSE_LOGGING=False